<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SftEngGP.ViewComponents.MaintenanceAddAndEditInputs">
    
    <VerticalStackLayout HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="SlateBlue" Margin="20,100">

        <Label Text="Date:" FontSize="Body" TextColor="White" Margin="50,40,0,0"/>
        <DatePicker x:Name="DateInput" FontSize="Body" TextColor="White" Margin="50,0,50,0"/>

        <Label Text="Maintainer:" FontSize="Body" TextColor="White" Margin="50,10,0,0"/>
        <Picker x:Name="MaintainerInput" Title="Select Maintainers Email" FontSize="Body" TextColor="White" Margin="50,0,50,0">
            <Picker.Items>
                <x:String>email1@email.com</x:String>
                <x:String>email2@email.com</x:String>
                <x:String>email3@email.com</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Sensor:" FontSize="Body" TextColor="White" Margin="50,10,0,0"/>
        <Picker x:Name="SensorInput" Title="Select Sensor" FontSize="Body" TextColor="White" Margin="50,0,50,0">
            <Picker.Items>
                <x:String>1</x:String>
                <x:String>2</x:String>
                <x:String>3</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Comments" FontSize="Body" TextColor="White" Margin="50,10,0,0"/>
        <Entry x:Name="CommentsInput" Placeholder="Comments" FontSize="Body" TextColor="White" Margin="50,0,50,0"/>

        <HorizontalStackLayout HorizontalOptions="Fill" Margin="20,20,0,0">
            <Label Text="" FontSize="Body" WidthRequest="210" TextColor="Red"/>
            <Button x:Name="SubmitButton" Text="{Binding CreateOrUpdate}" TextColor="Black" FontSize="Body" BackgroundColor="White" Margin="10,0,0,0" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentView>
