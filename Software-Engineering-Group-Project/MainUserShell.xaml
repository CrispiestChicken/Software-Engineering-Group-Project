<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SftEngGP.MainUserShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SftEngGP"
    xmlns:views="clr-namespace:SftEngGP.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SftEngGP">

    <TabBar>
        <Tab Title="Map" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}" />
        </Tab>
        <Tab Title="Maintenance" Icon="dotnet_bot.png">
            <ShellContent Route="MaintenanceOverview" ContentTemplate="{DataTemplate views:MaintenanceOverviewPage}" />
        </Tab>
        <Tab Title="Sensors" Route="Sensors" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:AllSensorsPage}" />
        </Tab>
    </TabBar>



</Shell>
