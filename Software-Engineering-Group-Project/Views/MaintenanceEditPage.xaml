<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SftEngGP.Views.MaintenanceEditPage"
             xmlns:viewModels="clr-namespace:SftEngGP.ViewModels"
             xmlns:custom_components="clr-namespace:SftEngGP.ViewComponents"
             x:DataType="viewModels:MaintenanceEditViewModel"
             Title="Editing Maintenance">

    <custom_components:MaintenanceAddAndEditInputs 
        MaintenanceRecord="{Binding MaintenanceRecord}" 
        CreateOrUpdateCommand="{Binding UpdateCommand}"
        ErrorMessage="{Binding ErrorMessage}" 
        AllAccounts="{Binding AllAccounts}"  
        AllSensors="{Binding AllSensors}"  
        CreateOrUpdate="{Binding CreateOrUpdate}"
        SelectedAccount="{Binding SelectedAccount}"
        SelectedSensor="{Binding SelectedSensor}"/>

</ContentPage>