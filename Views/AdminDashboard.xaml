<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SftEngGP.ViewModels"
             x:DataType="viewModels:AdminDashboardViewModel"
             x:Class="SftEngGP.Views.AdminDashboard">
    
    
    <ContentPage.BindingContext>
        <viewModels:AdminDashboardViewModel/>
    </ContentPage.BindingContext>

    
    <VerticalStackLayout Margin="20,0">
            <Rectangle WidthRequest="1000" HeightRequest="75" BackgroundColor="SlateBlue" Margin="0,0,0,75"/>
            
            <Button Command="{Binding AccountsButtonClickedCommand}" Text="Accounts" FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="SlateBlue" Padding="100" Margin="0,0,0,25" CornerRadius="30"/>
            <Button Command="{Binding SensorsButtonClickedCommand}" Text="Sensors" FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="SlateBlue" Padding="100" Margin="0,0,0,25" CornerRadius="30"/>
        </VerticalStackLayout>
        
    
</ContentPage>